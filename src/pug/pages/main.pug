						each item in list
							.partner-slider__item
								.partner-slider__img
									img(src="assets/img/"+item.img, alt="")
								
								.partner-slider__title= item.title

					.partner-slider-wrap__btn.d-md-none
						a.btn.btn_border.btn_small(href='#')
