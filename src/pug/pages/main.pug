extends ../layout/main

block variables
	- var title = 'Главная';

block content
	section.top-block
		.top-block__img(style="background-image: url(assets/img/bg-top-block.jpg)")

		.container
			.row
				.col-md-6
					.top-block__info
						.top-block__title Строительство, Реконструкция и Ремонт

						.top-block__text объектов энергетики, капитального строительства ЖКХ, промышленной инфраструктуры, монтаж теплоэнергетического и промышленного оборудования, в качестве генерального подрядчика

						.top-block__btn
							a.btn.btn_border.btn_white.btn_big(href='#')
								span Смотреть выполненные работы
							
	section.about
		.container
			.row.d-md-none
				.col-12
					h2 О нас
			.row
				.col-md-6.order-2.order-md-1
					h2.d-none.d-md-block О нас

					p Основной деятельностью ООО «ВСЭР» является выполнение работ по Строительству, Реконструкции и Ремонту объектов энергетики, капитального строительства, 
					p Мы — динамично развивающееся компания с высококвалифицированным персоналом. Располагаем производственными участками в Приморском и Камчатском краях.

				.col-md-6.order-1.order-md-2
					img(src="assets/img/about.jpg", alt="")

	section.services-slider-wrap.bg-grad-blue
		.container
			.row
				.col-12
					.services-slider-wrap__title
						h2 Наши услуги

					.services-slider.js-services-slider
						-
							var list=[
								{
									title:'Строительство, реконструкция, ремонт и техническое обслуживание',
									sub:[
										'Электрические станции',
										'Котельные',
										'Тепловые сети',
										'Электрические сети',
										'Газоперерабатывающие заводы',
										'Химические заводы',
										'Нефтеперерабатывающие заводы',
										'Топливопроводы',
										'Газопроводы',
										'Сети водоснабжения и водоотведения',
										'Резервуары',
										'Прочие инженерные сооружения',
									]
								},
								{
									title:'Строительство, реконструкция',
									sub:[
										'Электрические станции',
										'Котельные',
										'Тепловые сети',
										'Электрические сети',
									]
								},
								{
									title:'Строительство',
									sub:[
										'Электрические станции',
										'Котельные',
										'Тепловые сети',
										'Электрические сети',
										'Газоперерабатывающие заводы',
										'Химические заводы',
										'Нефтеперерабатывающие заводы',
									]
								},
							]

						each item in list
							.services-slider__sect
								.services-slider__title= item.title

								ul.list-col
									each sub in item.sub
										li= sub

					.services-slider-wrap__btn.d-md-none
						a.btn.btn_border.btn_white.btn_small(href='#')
							span Показать все услуги

	section.works-slider-wrap
		.container
			.row
				.col-12
					.works-slider-wrap__top
						.works-slider-wrap__info
							h2 Выполненные работы

							a.btn.btn_border.btn_small(href='#').d-none.d-md-inline-block
								span Все работы

						.slider-nav
							.slider-dots.js-works-slider-dots.d-none.d-lg-block
							.slider-arrows.js-works-slider-arr


					.works-slider.js-works-slider
						-
							var list=[
								{img:'works-slide1.jpg', title:'Условное название объекта'},
								{img:'works-slide2.jpg', title:'Условное название объекта 2'},
								{img:'works-slide3.jpg', title:'Условное название объекта 3'},
								{img:'works-slide2.jpg', title:'Условное название объекта 2'},
								{img:'works-slide1.jpg', title:'Условное название объекта'},
								{img:'works-slide3.jpg', title:'Условное название объекта 3'},
								{img:'works-slide3.jpg', title:'Условное название объекта 3'},
								{img:'works-slide2.jpg', title:'Условное название объекта 2'},
								{img:'works-slide1.jpg', title:'Условное название объекта'},
							]

						each item in list
							a(href="#").works-slider__item
								img(src="assets/img/"+item.img, alt="")
								
								.works-slider__popup
									.works-slider__title= item.title

					.works-slider-wrap__btn.d-md-none
						a.btn.btn_border.btn_small(href='#')
							span Все работы
					
	section.partner-slider-wrap
		.container
			.row
				.col-12
					.partner-slider-wrap__top
						.partner-slider-wrap__info
							h2 Наши партнеры

						.slider-nav
							.slider-dots.js-partner-slider-dots.d-none.d-lg-block
							.slider-arrows.js-partner-slider-arr


					.partner-slider.js-partner-slider
						-
							var list=[
								{img:'partner1.png', title:'Название компании'},
