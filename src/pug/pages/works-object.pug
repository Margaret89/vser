extends ../layout/main

block variables
	- var title = 'Наши работы';
	- var h1 = 'Наши работы';

block content
	section.works-page
		.container
			.row
				.col-12
					h2 Список объектов

					-
						var list=[
							{title:'2020 год'},
							{title:'2019 год', table:'short'},
							{title:'2018 год'},
							{title:'2017 год', table:'short'},
						]

					each item in list
						.unwrap-block.js-unwrap-block
							.unwrap-block__head.js-unwrap-head
								.unwrap-block__title= item.title
								.unwrap-block__action
									.unwrap-block__btn-label Показать / Скрыть
									.unwrap-block__btn
										+svg('ic-arrow-right','ic-arrow-right ic-stroke', '10', '20')

							.unwrap-block__content.js-unwrap-content
								if(item.table=='short')
									table.design-table
										thead
											tr
												th(style="width: 60px")
												th Заказчик - ПАО «Камчатскэнерго» г. Петропавловск-Камчатский Камчатский край
										tbody
											tr
												td 1
												td Капитальный ремонт паротурбинной установки ПТ-80/100-130 ЛМЗ ст. №2 Кам-чатской ТЭЦ-2
											tr
												td 2
												td Капитальный ремонт генератора ТВФ-110-2ЕУЗ-2 ст. №2 Камчатской ТЭЦ-2
											tr
												td 3
												td Капитальный ремонт генератора ТВФ-63-2 ст. №5 Камчатской ТЭЦ-1
											tr
												td 4
												td Капитальный ремонт участков тепловых сетей г. Петропавловск-Камчатского
											tr
												td 5
												td Ремонт паропровода станции биологической очистки (СБО) ХЦ-2 станции ТЭЦ-2

								else
									table.design-table
										thead
											tr
												th(style="width: 60px")
												th Заказчик - ПАО «Камчатскэнерго» г. Петропавловск-Камчатский Камчатский край
										tbody
											tr
												td 1
												td Капитальный ремонт паротурбинной установки ПТ-80/100-130 ЛМЗ ст. №2 Кам-чатской ТЭЦ-2
											tr
												td 2
												td Капитальный ремонт генератора ТВФ-110-2ЕУЗ-2 ст. №2 Камчатской ТЭЦ-2
											tr
												td 3
												td Капитальный ремонт генератора ТВФ-63-2 ст. №5 Камчатской ТЭЦ-1
											tr
												td 4
												td Капитальный ремонт участков тепловых сетей г. Петропавловск-Камчатского
											tr
												td 5
												td Ремонт паропровода станции биологической очистки (СБО) ХЦ-2 станции ТЭЦ-2
											tr
												td 6
												td Капитальный ремонт БЗХВ V=200м3 с поднятием фундамента ЦТП
											tr
												td 7
												td Капитальный ремонт водоподогревателей 16 ОСТ на ЦТП-101(3) и ЦТП-236(32)
											tr
												td 8
